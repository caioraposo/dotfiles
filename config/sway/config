bar {
	mode invisible
    #status_command custom_statusbar

    position bottom
    pango_markup disabled
    strip_workspace_numbers yes

    colors {
        statusline $fg1
        background $bg0
        inactive_workspace $bg1 $bg1 $aqua
        focused_workspace $fg1 $fg1 $bg0
        active_workspace $fg4 $fg4 $bg0
        urgent_workspace $bg1 $red $fg1
    }
}

