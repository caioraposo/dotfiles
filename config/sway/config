bar {
    status_command custom_statusbar
    
    position top
    pango_markup disabled
    font Fira Sans 11
    strip_workspace_numbers yes

    colors {
        statusline $nord8
        background $nord0
        inactive_workspace $nord1 $nord1 $nord8
        focused_workspace $nord4 $nord4 $nord0
    }
}

