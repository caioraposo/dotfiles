{
    "languageserver": {
        "rust":{
            "enable": true,
            "command": "rls",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"],
            "revealOutputChannelOn": "error",
            "trace.server": "off"
        },
        "ccls": {
            "enable": true,
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".hg/"],
            "trace.server": "off"
        },
        "dart": {
            "enable": true,
            "command": "dart_language_server",
            "filetypes": ["dart"],
            "trace.server": "off",
            "settings": {
                "dart": {
                    "validation": {},
                    "completion": {}
                }
            }
        },
        "python": {
            "enable": true,
            "command": "python",
            "args": [
                  "-mpyls",
                  "-vv",
                  "--log-file",
                  "/tmp/lsp_python.log"
                ],
            "filetypes": ["python"],
            "trace.server": "off",
            "settings": {
                "pyls": {
                    "plugins": {
                        "pyls_mypy": {
                            "enabled": true,
                            "live_mode": false
                        },
                        "pycodestyle": {
                            "enabled": true
                        },
                        "pyflakes": {
                            "enabled": true
                        },
                        "pylint": {
                            "enabled": false
                        }
                    }
                }
            }
        },
        "bash": {
            "enable": true,
            "command": "bash-language-server",
            "trace.server": "off",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "latex":{
            "enable": false,
            "command": "texlab",
            "trace.server": "off",
            "filetypes": ["tex"],
            "ignoredRootPaths": ["~"],
            "settings": {
                "latex": {
                    "build": {
                        "args": ["-pdf", "-interaction=nonstopmode", "-synctex=1", "-pv"]
                    },
                    "forwardSearch": {
                        "executable": "okular",
                        "args": ["--unique", "file:%p#src:%1%f"]
                    }
                }
            }
        }
    },
    "java.errors.incompleteClasspath.severity": "ignore",
    "python.jediEnabled": false,
    "suggest.autoTrigger": "trigger"
}
