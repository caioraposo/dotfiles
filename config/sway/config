client.focused          $nord4 $nord4 $nord0 $nord15 $nord4
client.focused_inactive $nord4 $nord4 $nord0 $nord15 $nord4
client.unfocused        $nord4 $nord1 $nord9 $nord15 $nord1
client.urgent           $nord4 $nord11 $nord4 $nord11 $nord11

